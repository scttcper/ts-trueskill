{
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "noResolve": false,
    "target": "es5",
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "types" : ["node", "mocha"]
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "compileOnSave": false
}
